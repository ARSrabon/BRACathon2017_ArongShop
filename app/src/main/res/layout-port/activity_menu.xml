<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.arsrabon.m.bracathon2017_arongshop.activity.MenuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/md_blue_600"
        android:weightSum="1"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="মেনু"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="35sp" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_todayRouteMap"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Today's Route" />

        <Button
            android:id="@+id/btn_outletList"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Outlet List" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Take Order" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Product Show" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="My Performance" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Report" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Chat" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Sync Data" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Inbox" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Sign Out" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
